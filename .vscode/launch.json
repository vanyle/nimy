{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nimy Server with LLDB",
      "type": "lldb",
      "request": "launch",
      "windows": {
        "program": "${workspaceFolder}/target/debug/nimy.exe"
      },
      "program": "${workspaceFolder}/target/debug/nimy",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Extension",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}"],
      "outFiles": ["${workspaceRoot}/client/out/**/*.js"],
      "env": {
        "SERVER_PATH": "${workspaceRoot}/target/debug/nimy",
        "languageClient.trace": "verbose",
        "languageClient.trace.server": "verbose"
      }
    }
  ]
}
